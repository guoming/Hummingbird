{
  "Logging": {
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Debug"
      }
    }
  },
  "HttpClient": {
    //异常重试次数
    "RetryCount": 3,
    //熔断异常阀值，超过自动熔断
    "ExceptionsAllowedBeforeBreaking": 10,
    //熔断位置的秒数（60秒）
    "DurationSecondsOfBreak": 60,
    //超时毫秒数
    "TimeoutMillseconds": 5000
  },
  "Database": {
    "SQLServer": {
      "Server": "localhost",
      "Database": "example",
      "UserId": "sa",
      "Password": "123456"
    }
  },
  "AppMetrics": {
    "Console": {
      "Enable": false
    },
    "Influxdb": {
      "Enable": true,
      "Address": "http://localhost:8086",
      "Database": "AppMetrics",
      "UserName": "root",
      "Password": "influxdb",
      "Options": {
        "FlushInterval": 5,
        "HttpPolicy": {
          "FailuresBeforeBackoff": 3,
          "Timeout": "15",
          "BackoffPeriod": "30"
        }
      }
    }
  },
  "EventBus": {
    "HostName": "localhost",
    "Port": "5672",
    "VirtualHost": "/",
    "UserName": "guest",
    "Password": "guest"
  },
  "Redis":{
    "Server":"localhost",
    "Password":""
  },
  "Kafka": {
    "Sender": {
      "Debug": "broker,topic,msg",
      "bootstrap.servers": "127.0.0.1:9092"

    },
    "Receiver": {
      "Debug": "consumer,cgrp,topic,fetch",
      "GroupId": "dev1",
      "bootstrap.servers": "127.0.0.1:9092"
    }
  },
  "Canal": {
    "Subscribes": [
      {
        "Filter": ".*\\..*",
        "BatchSize": 1024,
        "Format": "Hummingbird.Extensions.Canal.Formatters.CanalJson.Formatter,Hummingbird.Extensions.Canal", //MaxwellJsonFormatter,CanalJsonFormatter
        "Connector": "Hummingbird.Extensions.Canal.Connectors.ConsoleConnector,Hummingbird.Extensions.Canal",
        "ConnectionInfo": {
          "Address": "localhost",
          "Port": 11111,
          "Destination": "example",
          "UserName": "",
          "Passsword": ""
        }
      }
    ]
  },
  "Quartz": {
    "Open": true,
    //触发器
    "CronTriggers": [
      {
        "Open": true, //功能开关
        //基于镜像回源文件同步任务
        "Name": "ExampleCronJob_Trigger",
        //分组
        "Group": "ExampleCronJob_Triggers",
        //表达式（5秒钟执行一次）
        "Expression": "*/1 * * * * ?",
        "JobType": "Hummingbird.Example.Jobs.HelloJob,Hummingbird.Example",
        "JobName": "ExampleCronJob",
        "JobGroup": "ExampleCronJobGroup"
      }
    ]
  },
  "Jaeger": {
    "Open": false,
    "SerivceName": "example",
    "FlushIntervalSeconds": 15,
    "SamplerType": "const",
    "LogSpans": true,
    "AgentPort": "5775",      //代理端口
    "AgentHost": "localhost", //代理地址
    "EndPoint": "http://localhost:14268/api/traces"
  },
  "FileSystem":{
    //本地文件系统
     "Physical":
     {
      "DataPath":"/opt/data" 
     },
    //阿里云OSS 
    "Oss":{
      //缓存 Oss 文件元数据
      "CacheOssFileMetaEnable":true,
      //元数据缓存过期时间(秒)
      "CacheOssFileMetaAbsoluteExpirationSeconds": 600,
      //缓存本地目录(
      "CacheLocalPath":"/opt/data",
      //文件缓存(开关)
      "CacheLocalFileEnabled":true,
      //文件缓存(大文件不进行缓存)
      "CacheLocalFileSizeLimit": 20971520,
      // 文件缓存(通过命中次数计算是否热点)
      "CacheLocalFileIfHits":5,
      "EndpointName":"demo",
      "Endpoints":{
        "demo": {
          "Endpoint": "oss-cn-shenzhen.aliyuncs.com",
          "AccessKeyId": "xxxx",
          "AccessKeySecret": "xxx",
          "BucketName": "demo",
          "ObjectPrefix": "/"
        }
      }
    }
  },
  //请求限制
  "RequestLimit": {
    //限流规则
    "RateLimit":{
      "Rules":[
        {
          "Route":"^/.*$",
          "Method":"GET",
          //10个请求
          "NumberOfRequests":10,
          //60s
          "PeriodInSeconds":1,
          //突发流量
          "MaxBurst":1
        }]
    },
    //超时规则
    "TimeoutLimit":{
      "Rules":[
        {
          "Route":"^/.*$",
          "Method":"GET",
          "TimeoutMillseconds":10000
        }]
    }
  },
  "SERVICE_REGISTRY_ADDRESS": "localhost",
  "SERVICE_REGISTRY_PORT": "8500",
  "SERVICE_SELF_REGISTER": true,
  "SERVICE_NAME": "example",
  "SERVICE_TAGS": "test",
  "SERVICE_REGION": "dc1",
  "SERVICE_CHECK_HTTP": "/healthcheck",
  "SERVICE_CHECK_TCP": null,
  "SERVICE_CHECK_SCRIPT": null,
  "SERVICE_CHECK_TTL": "15",
  "SERVICE_CHECK_INTERVAL": "5",
  "SERVICE_CHECK_TIMEOUT": "5"
}
